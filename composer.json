{
    "name": "leocavalcante/phusic",
    "description": "PHP port of the Fusic experiment",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "leocavalcante",
            "email": "lc@leocavalcante.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {},
    "autoload": {
        "psr-4": {
            "Phusic\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phusic\\Test\\": "tests/"
        }
    },
    "bin": ["bin/major-scale.php", "bin/triad-chord.php"],
    "scripts": {
        "major-scale": "php bin/major-scale.php",
        "triad-chord": "php bin/triad-chord.php",
        "test": "phpunit --bootstrap vendor/autoload.php tests"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4"
    }
}
